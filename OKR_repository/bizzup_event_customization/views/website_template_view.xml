    <!--Thank you page-->
    <template id="event_feedback_thank_you" name="Event Feedback Thank You">
        <t t-call="website.layout">
            <div class="container text-center"
                 style="max-width: 600px; margin-top: 50px;margin-bottom: 10px;">
                <!-- Success Icon -->
                <div style="display: flex; justify-content: center; align-items: center;">
                    <div style="background-color: #28a745; border-radius: 50%; width: 80px; height: 80px;
                                display: flex; justify-content: center; align-items: center;">
                        <i class="fa fa-paper-plane"
                           style="font-size: 40px; color: white;"/>
                    </div>
                </div>

                <!-- Thank You Message -->
                <h1 class="mt-4" style="font-size: 32px; font-weight: bold;">
                    Thank You!
                </h1>
                <p style="font-size: 18px; color: #555;">
                    Your feedback has been submitted successfully.
                    <br/>
                    We appreciate your time and effort in sharing your
                    experience with us.
                </p>

                <!-- Button to Return to Homepage -->
                <a href="/" class="btn btn-primary mt-3"
                   style="font-size: 16px; padding: 10px 20px;background-color: #714B67; color:white;">
                    Go to Homepage
                </a>
            </div>
        </t>
